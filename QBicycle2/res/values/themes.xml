<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Holo_QBicycle_Theme_Custom" parent="Holo.Theme.Light">
        <!-- ActionBar Tab Background -->
        <item name="android:actionBarTabBarStyle">@style/Widget.app.ActionBar.TabBar</item>
        <item name="actionBarTabBarStyle">@style/Widget.app.ActionBar.TabBar</item>
        <!-- ActionBar Tab TextStyle -->
        <item name="android:actionBarTabTextStyle">@style/Widget.app.ActionBar.TabText</item>
        <item name="actionBarTabTextStyle">@style/Widget.app.ActionBar.TabText</item>
    </style>
    
    <style name="Widget.app.ActionBar.TabBar" parent="Widget.Sherlock.ActionBar.TabBar">
        <item name="android:background">#d9d9d9</item>
        <item name="background">#d9d9d9</item>
    </style>
    
    <style name="Widget.app.ActionBar.TabText" parent="Widget.Sherlock.ActionBar.TabText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#686868</item>
    </style>

    <style name="Theme.NoTitleBar" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.HalfTranslucent" parent="@android:style/Theme.Translucent">
        <item name="android:windowBackground">@color/half_transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.Translucent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Animation" />

    <style name="Animation.Translucent" parent="@style/Animation">
        <item name="android:windowEnterAnimation">@anim/translucent_zoom_out</item>
        <item name="android:windowExitAnimation">@anim/translucent_zoom_exit</item>
    </style>

    <style name="footbar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">@dimen/space_1</item>
        <item name="android:paddingBottom">@dimen/space_3</item>
    </style>
